<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="customStarRatingBar" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
       <item name="android:minHeight">20dip</item>
       <item name="android:maxHeight">22dip</item>
   </style>
   
    <style name="customStarRatingBarBig" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/star_rating_bar_full_big</item>
       <item name="android:minHeight">40dip</item>
       <item name="android:maxHeight">90dip</item>
   </style>
   
     <style name="customStarRatingBarMed" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/star_rating_bar_full_med</item>
       <item name="android:minHeight">20dip</item>
       <item name="android:maxHeight">20dip</item>
   </style>

</resources>
