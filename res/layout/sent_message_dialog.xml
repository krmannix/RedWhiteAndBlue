<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_bg" >
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Message Sent!"
        android:layout_marginTop="12dp"
        android:textSize="25sp"
        android:id="@+id/message_sent_text"
        android:textColor="#FFFFFF"
        />
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/message_sent_text"
        android:text="Would you like to \nsend another one?"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:id="@+id/message_sent_text_question"
        android:textColor="#FFFFFF"
        />
    
    <ImageView 
        android:layout_height="60dp"
        android:layout_width="100dp"
        android:id="@+id/send_another_button"
        android:layout_below="@+id/message_sent_text_question"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src= "@drawable/rounded_corners_one"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        />
    
    <TextView
        android:id="@+id/send_another_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/send_another_button"
        android:layout_alignTop="@+id/send_another_button"
        android:layout_alignRight="@+id/send_another_button"
        android:layout_alignBottom="@+id/send_another_button"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Yes"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/send_another_no_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/send_another_button_text"
        android:layout_marginRight="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/rounded_corners_one"
        android:textColor="#FFFFFF" />
    
    <TextView
        android:id="@+id/send_another_no_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/send_another_no_button"
        android:layout_alignTop="@+id/send_another_no_button"
        android:layout_alignRight="@+id/send_another_no_button"
        android:layout_alignBottom="@+id/send_another_no_button"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="No"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />
    
    <TextView
        android:layout_height="1dp"
        android:layout_width="1dp"
        android:layout_below="@+id/send_another_no_button_text"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
