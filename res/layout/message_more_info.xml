<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_bg" >
    
    <TextView
        android:id="@+id/message_more_info_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:text="Message:"
        />
    
     <TextView
        android:id="@+id/message_more_info_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/message_more_info_title"
        android:gravity="center"
        android:textColor="@color/blue_bg"
        android:text="Message"
        />
     
     <RatingBar 
    	    android:id="@+id/messge_more_info_star" 
    	    style="@style/customStarRatingBarBig" 
    	    android:layout_below="@+id/message_more_info_message"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"   
    	    android:layout_width="wrap_content" 
    	    android:layout_height="wrap_content"
    	    android:rating="3"
    	    android:isIndicator="true"
    	    android:stepSize=".2" />
     
     <TextView
        android:id="@+id/message_more_info_created"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
		android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/messge_more_info_star" 
        android:gravity="center"
        android:textColor="#C00"
        android:text="Created At"
        />
     
     <TextView
         android:layout_width="1dp"
         android:layout_height="1dp"
         android:text="" 
         android:layout_marginTop="10dp"
         android:layout_below="@+id/message_more_info_created"
         />
</RelativeLayout>
