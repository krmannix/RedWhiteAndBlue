<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:background="@drawable/rounded_corners_white">
    
    <TextView
        android:id="@+id/leaderboard_rank"
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="1"
        android:textSize="22sp"
     	android:layout_marginLeft="2dp"
        />
    
    <TextView
        android:id="@+id/leaderboard_score"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/leaderboard_rank"
        android:text="2748"
        android:layout_marginRight="2dp"
        android:gravity="right"
		android:textAlignment="gravity"
        android:textSize="20sp" 
        />
    
      <ImageView
        android:id="@+id/rank_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/leaderboard_rank"
        android:layout_alignBottom="@+id/leaderboard_rank"
        android:layout_toLeftOf="@+id/leaderboard_rank"
        android:layout_marginLeft="2dp"
        />

    <TextView
        android:id="@+id/leaderboard_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leaderboard_rank"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/leaderboard_rank"
        android:text="Username12345"
        android:textSize="22sp" />
    
</RelativeLayout>
