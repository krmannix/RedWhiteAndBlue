<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" 
    android:background="@drawable/rounded_corners_white">
    
    <TextView
        android:id="@+id/leaderboard_message_rank"
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="1"
        android:textSize="22sp"
     	android:layout_marginLeft="2dp"
        />
    
       <RatingBar
           android:id="@+id/rating_bar_message"
           style="@style/customStarRatingBar"
           android:layout_width="wrap_content"
           android:layout_height="24dp"
           android:layout_alignTop="@+id/leaderboard_message_rank"
           android:layout_alignParentRight="true"
           android:gravity="right"
           android:isIndicator="true"
           android:paddingTop="8px"
           android:stepSize=".2" />

    <TextView
        android:id="@+id/leaderboard_message_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leaderboard_message_rank"
        android:maxLines="1" 
		android:ellipsize="end" 
		android:singleLine="true"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/leaderboard_message_rank"
        android:text="Username12345"
        android:textSize="22sp" />
    
</RelativeLayout>