<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/medal_image"
        android:layout_width="60dp" 
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:padding="0dp"
        android:src="@drawable/no_rounded_corners"
        />
    
    <TextView
        android:id="@+id/medal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/medal_image"
        android:layout_toRightOf="@+id/medal_image"
        android:text="Medal Name"
        android:textSize="18sp"
        android:padding="0dp"
         />
    
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_check_off" />

</RelativeLayout>
